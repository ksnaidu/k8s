apiVersion: apps/v1
kind: deployement
metadata:
  name: my-deployement-cip
  spec:
    replicas: 3
    selector: 
      matchlabels:
         app: my-app-cip
    template:
     metadata:
      labels:
       app: my-app-cip

     spec:
      containers:
      - name: my-container
        image: nginx:latest
        ports:
        - containerPort: 80

---
apiVersion: v1
kind: service
metadata:
  name: my-app-cip
  labels:
    app: my-app-cip

spec:
 type: ClusterIP
 ports:
 - port: 80
   targetPort: 80
   protocol: Tcp
  selector:
     app: my-app-cip